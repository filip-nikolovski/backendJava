<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="customerDAO" class="com.interway.projectsmanager.dao.JdbcCustomerDAO">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="projectDAO" class="com.interway.projectsmanager.dao.JdbcProjectDAO">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="serviceDAO" class="com.interway.projectsmanager.dao.JdbcServiceDAO">
        <property name="dataSource" ref="dataSource" />
    </bean>

</beans>